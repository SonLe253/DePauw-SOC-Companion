{
    "manifest_version": 2,
    
    "name": "DPU Course Companion",
    "description": "DePauw Course Companion",
    "version": "0.1",

    "author": "Son Le",
    //"default_locale": "en",
    
    //"icons": {}, to be added
    
    "page_action": {
        //"default_icon": {}, to be added
        "default_title": "Course Companion",
        "default_popup": "popup.html"
     },
    
    "background": {
        "scripts": ["event.js"],
        "persistent" : false
    },
    
    "content_scripts": [
        {
            "matches": [
                "*://*.depauw.edu/e/reg/soc-view/results.asp"
            ],
        
            "js": [
                "content_scripts/lib/jquery-3.3.1.min.js",
                "content_scripts/lib/jquery-ui.min.js",
                "content_scripts/courseCompanion-cs.js"
            ]
    }],
    
    "permissions": [
        "storage",
        "notifications",
        "tabs",
        "*://*.depauw.edu/*"
    ]
  }